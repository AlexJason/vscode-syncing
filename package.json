{
    "name": "syncing",
    "displayName": "Syncing",
    "description": "Sync every settings with your own GitHub Gist.",
    "version": "1.5.3",
    "publisher": "nonoroazoro",
    "author": {
        "email": "xiaochao.k@gmail.com",
        "name": "nonoroazoro",
        "url": "http://www.alibabagroup.com/"
    },
    "homepage": "https://github.com/nonoroazoro/vscode-syncing",
    "license": "MIT",
    "main": "dist/src/extension",
    "icon": "resources/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/nonoroazoro/vscode-syncing"
    },
    "bugs": {
        "url": "https://github.com/nonoroazoro/vscode-syncing/issues",
        "email": "xiaochao.k@gmail.com"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "sync-settings",
        "sync",
        "syncing",
        "vscode-syncing"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "syncing.uploadSettings",
                "title": "Syncing: Upload Settings"
            },
            {
                "command": "syncing.downloadSettings",
                "title": "Syncing: Download Settings"
            },
            {
                "command": "syncing.openSettings",
                "title": "Syncing: Open Syncing Settings"
            }
        ],
        "configuration": [
            {
                "title": "Syncing",
                "properties": {
                    "syncing.pokaYokeThreshold": {
                        "type": "number",
                        "default": 10,
                        "description": "Configure a threshold to enable Poka-Yoke (Mistake-Proofing). Each time you start a synchronization, Syncing will display a warning dialog if the changes between the local and remote setting exceed the threshold.\nThe default value is 10.\nTo disable this feature, just set to a number less than or equal to zero (<= 0)."
                    },
                    "syncing.upload.exclude": {
                        "type": "array",
                        "default": [],
                        "description": "Configure glob patterns for excluding VSCode settings from being uploaded by Syncing. For example:\n[\n    \"workbench.colorTheme\",\n    \"editor.*\"\n]\nNow Syncing will no longer upload the \"workbench.colorTheme\" and all the settings of \"editor\"."
                    }
                }
            }
        ],
        "keybindings": [
            {
                "key": "",
                "command": "syncing.uploadSettings"
            },
            {
                "key": "",
                "command": "syncing.downloadSettings"
            },
            {
                "key": "",
                "command": "syncing.openSettings"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "precommit": "lint-staged",
        "prebuild": "npm run clean",
        "build": "tsc -p ./tsconfig.json --sourceMap false",
        "watch": "tsc -p ./tsconfig.json -w",
        "test": "mocha",
        "clean": "rimraf dist/*",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "@octokit/rest": "^15.2.6",
        "adm-zip": "^0.4.9",
        "async": "^2.6.0",
        "fs-extra": "^5.0.0",
        "https-proxy-agent": "^2.2.1",
        "jsonc-parser": "^2.0.0",
        "jsondiffpatch": "^0.3.9",
        "junk": "^2.1.0",
        "lodash.pick": "^4.4.0",
        "minimatch": "^3.0.4",
        "moment": "^2.22.1",
        "temp": "^0.8.3"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.31",
        "@types/async": "^2.0.49",
        "@types/fs-extra": "^5.0.2",
        "@types/lodash.pick": "^4.4.3",
        "@types/minimatch": "^3.0.3",
        "@types/node": "^10.0.0",
        "@types/temp": "^0.8.32",
        "husky": "^0.14.3",
        "lint-staged": "^7.0.5",
        "mocha": "^5.1.1",
        "rimraf": "^2.6.2",
        "should": "^13.2.1",
        "tslint": "^5.9.1",
        "typescript": "^2.8.3",
        "vscode": "^1.1.16"
    },
    "lint-staged": {
        "./src/**/*.ts": [
            "tslint",
            "git add"
        ]
    }
}
